doctype html
html
    head
        title «Amrest-app»
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width")
        link(rel='stylesheet', type='text/css', href='css/normalize.css')
        link(rel='stylesheet', type='text/css', href='css/style.css')
    body
        ul.activity-list
            li.activity-list__item
                a(href='#').activity-list__link.activity-list__link--active
                    img(src='img/svg/id.svg' alt='id').activity-list__icon
            li.activity-list__item
                a(href='#').activity-list__link
                    img(src='img/svg/bookmark.svg' alt='bookmark').activity-list__icon
            li.activity-list__item
