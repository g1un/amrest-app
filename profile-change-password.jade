doctype html
html
    head
        title «Amrest-app»
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width")
        link(rel='stylesheet', type='text/css', href='css/normalize.css')
        link(rel='stylesheet', type='text/css', href='css/style.css')
    body
        header.profile-header
            div.profile-header__up
                div.profile-header__photo
                    img(src='img/photo.jpg')
                p.common-text.green-dark.fz-14.profile-header__name Maria Ivanova
                div.profile-header__slogan
                    p.common-text.green-dark.fz-10.profile-header__slogan-text Мой девиз: «Возможно всё!»
                    span.profile-header__slogan-triangle
                        img(src='img/svg/profile-slogan-triangle.svg').profile-header__slogan-img
            ul.activity-list.profile-header__nav
                li.activity-list__item
                    a(href='#').activity-list__link
                        img(src='img/svg/bag-in-loupe.svg' alt='id').activity-list__icon
                li.activity-list__item
                    a(href='#').activity-list__link
                        img(src='img/svg/people-plus.svg' alt='bookmark').activity-list__icon
                li.activity-list__item
                    a(href='#').activity-list__link
                        img(src='img/svg/tel-mail.svg' alt='develop').activity-list__icon
                li.activity-list__item
                    a(href='#').activity-list__link
                        img(src='img/svg/calendar-man.svg' alt='graph').activity-list__icon
                li.activity-list__item
                    a(href='#').activity-list__link.activity-list__link--active
                        img(src='img/svg/lock-unlocked.svg' alt='calendar').activity-list__icon

        section.layout-profile.layout-bg-light
            div.activity
                h2.bold-text.fz-14.green-dark.ttu.green-dark.profile__title Сменить пароль
                form(action='#', method='get').profile__form
                    table.table-inputs
                        tr.table-inputs__tr
                            td.common-text.fz-12.green-dark.table-inputs__key Новый пароль
                            td.table-inputs__val
                                input(type='password', name='profile-new-password').common-text.fz-12.green-dark.common-text.fz-12.green-dark.btn-form-sm
                        tr.table-inputs__tr
                            td.common-text.fz-12.green-dark.table-inputs__key Подтверждение пароля
                            td.table-inputs__val
                                input(type='password', name='profile-new-password-repeat').common-text.fz-12.green-dark.btn-form-sm
                        tr.table-inputs__tr
                            td(colspan='2').table-inputs__buttons.clearfix
                                input(type='submit', name='profile-social-submit', value='Изменить').common-text.fz-10.white.btn-simple-green.fl-r.table-inputs__btn

        ul.activity-footer
            li.activity-footer__item
                a(href='#').activity-footer__link
                    img(src='img/svg/support.svg' alt='support').activity-footer__icon.activity-footer__icon--support
            li.activity-footer__item
                a(href='#').activity-footer__link
                    img(src='img/svg/rss.svg' alt='rss').activity-footer__icon.activity-footer__icon--rss
                    span.text-xs.black.activity-footer__notification 5
            li.activity-footer__item
                a(href='#').activity-footer__link
                    img(src='img/svg/bell.svg' alt='bell').activity-footer__icon.activity-footer__icon--notify
                    span.text-xs.black.activity-footer__notification 3

        script(src='js/jquery-3.0.0.min.js')
        script(src='js/script.js')