doctype html
html
	head
		title «Amrest-app»
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', type='text/css', href='css/normalize.css')
		link(rel='stylesheet', type='text/css', href='css/style.css')
	body
		div.layout-start.layout-start--login
			div.logo.layout-start__logo
			form(action='#' method='get')
				label.label.layout-start__label
					input(type='text' name='login' placeholder='email@amrest.eu').btn-form.btn-form--right.btn-form--login
					img(src='img/svg/mail-login.svg')
				label.label.layout-start__label
					input(type='password' name='password').btn-form.btn-form--right.btn-form--login
					img(src='img/svg/padlock-unlock.svg')
				label.label.layout-start__label
					input(type='submit' name='submit' value='Войти').btn-big.btn-big--login.text-big-btn.btn-form--login
		footer.footer-start
			a(href='#').btn-footer-start.text-main.footer-start__btn Забыли пароль
			a(href='#').btn-footer-start.text-main.footer-start__btn Регистрация
